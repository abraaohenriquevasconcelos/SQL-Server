create database jobs
go
use jobs
go 
create table [dbo].[tabela_drives](
	[data] [datetime] null,
	[drive] [char](1) null,
	[espacolivre_mb] [bigint] null

)

alter table [dbo].[tabela_drives] add default (getdate()) for [data]

insert into tabela_drives(drive, espacolivre_mb) execute xp_fixeddrives

select * from dbo.tabela_drives

